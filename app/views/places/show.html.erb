
<h1><%= @place.name %></h1>

<p>
  <a href="/posts/new?place_id=<%= @place.id %>">New Post</a>
</p>

<% if @current_user %>
  <% for post in @place.posts %>
  <h3><%= post.title %></h3>
  <h4><%= post.posted_on %></h4>
  <p><%= post.description %></p>
  <% end %>

  <p>
    <a href="/places">Back to All Places</a>
  </p>

  <p><%= button_to "Delete this place", @place, method: :delete %></p>
<% end %>